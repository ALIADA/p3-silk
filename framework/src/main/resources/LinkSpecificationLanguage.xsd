<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="AnyParam" abstract="true" />

  <xs:element name="Param" substitutionGroup="AnyParam">
    <xs:complexType>
      <xs:attribute name="name" type="xs:string" use="required" />
      <xs:attribute name="value" type="xs:string" use="required" />
    </xs:complexType>
  </xs:element>

  <xs:element name="PathParam" substitutionGroup="AnyParam">
    <xs:complexType>
      <xs:attribute name="name" type="xs:string" use="required" />
      <xs:attribute name="path" type="xs:string" use="required" />
    </xs:complexType>
  </xs:element>

  <xs:element name="TransformParam" substitutionGroup="AnyParam">
    <xs:complexType>
        <xs:sequence>
          <xs:element ref="AnyParam" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="name" type="xs:string" use="required" />
        <xs:attribute name="function" type="xs:string" use="required" />
    </xs:complexType>
  </xs:element>

  <xs:element name="Compare">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="AnyParam" minOccurs="2" maxOccurs="unbounded"/>
      </xs:sequence>
      <xs:attribute name="metric" type="xs:string" use="required" />
      <xs:attribute name="optional" type="xs:boolean" />
      <xs:attribute name="weight" type="xs:unsignedShort" />
    </xs:complexType>
  </xs:element>

  <xs:element name="Aggregate">
    <xs:complexType>
      <xs:sequence>
        <xs:choice maxOccurs="unbounded">
          <xs:element ref="Aggregate" />
          <xs:element ref="Compare" />
        </xs:choice>
      </xs:sequence>
      <xs:attribute name="type" type="xs:string" use="required" />
      <xs:attribute name="optional" type="xs:boolean" />
      <xs:attribute name="weight" type="xs:unsignedShort" />
    </xs:complexType>
  </xs:element>
  
  <xs:element name="Silk">
    <xs:complexType>
      <xs:sequence>

        <xs:element name="Prefixes">
          <xs:complexType>
            <xs:sequence>
              <xs:element maxOccurs="unbounded" name="Prefix">
                <xs:complexType>
                  <xs:attribute name="id" type="xs:string" use="required" />
                  <xs:attribute name="namespace" type="xs:string" use="required" />
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <xs:element name="DataSources">
          <xs:complexType>
            <xs:sequence>
              <xs:element minOccurs="2" maxOccurs="2" name="DataSource">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element ref="Param" minOccurs="0" maxOccurs="unbounded"/>
                  </xs:sequence>
                  <xs:attribute name="id" type="xs:string" use="required" />
                  <xs:attribute name="type" type="xs:string" use="required" />
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        
        <xs:element name="Interlink" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              
              <xs:element name="LinkType" type="xs:string" />
              
              <xs:element name="SourceDataset">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="RestrictTo" type="xs:string" />
                  </xs:sequence>
                  <xs:attribute name="dataSource" type="xs:string" use="required" />
                  <xs:attribute name="var" type="xs:string" use="required" />
                </xs:complexType>
              </xs:element>
              
              <xs:element name="TargetDataset">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="RestrictTo" type="xs:string" />
                  </xs:sequence>
                  <xs:attribute name="dataSource" type="xs:string" use="required" />
                  <xs:attribute name="var" type="xs:string" use="required" />
                </xs:complexType>
              </xs:element>
              
              <xs:element name="LinkCondition">
                <xs:complexType>
                  <xs:sequence>
                    <xs:choice>
                      <xs:element ref="Aggregate" />
                      <xs:element ref="Compare" />
                    </xs:choice>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              
              <xs:element name="Thresholds">
                <xs:complexType>
                  <xs:attribute name="accept" type="xs:decimal" use="required" />
                  <xs:attribute name="verify" type="xs:decimal" />
                </xs:complexType>
              </xs:element>
              
              <xs:element name="Limit">
                <xs:complexType>
                  <xs:attribute name="max" type="xs:unsignedShort" use="required" />
                  <xs:attribute name="method" type="xs:string" use="required" />
                </xs:complexType>
              </xs:element>

              <xs:element name="Outputs">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element minOccurs="1" maxOccurs="unbounded" name="Output">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element ref="Param" minOccurs="0" maxOccurs="unbounded"/>
                        </xs:sequence>
                        <xs:attribute name="type" type="xs:string" default="file" />
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              
            </xs:sequence>
            <xs:attribute name="id" type="xs:string" use="required" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>